@{
    ViewBag.Title = "archivo";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<link href="~/Content/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<div id="app" v-cloak>
    <v-app id="inspire">
        <v-toolbar>
            <img v-on:click="IndexPrincipal()" src="~/Content/image/pizarra21.png" height="60" width="120" style="margin-right:30px;cursor:pointer" />
            <v-spacer></v-spacer>
            <v-toolbar-items class="hidden-sm-and-down">
                <v-btn v-on:click="MenuArchivo">Menú Archivo</v-btn>
                <v-btn v-on:click="MenuVideo">Menú Docente</v-btn>
                <v-btn v-on:click="MenuListado">Listado Videos</v-btn>
            </v-toolbar-items>
            <div class="text-xs-center">
                <v-menu :close-on-content-click="false" :nudge-width="200" offset-y>
                    <template v-slot:activator="{ on }">
                        <v-btn fab color="success"
                               dark depressed
                               v-on="on">
                            <i class="fas fa-user-circle fa-2x"></i>

                        </v-btn>
                    </template>
                    <v-card>
                        <v-list>
                            <v-list-tile avatar>
                                <v-list-tile-avatar>
                                    <img src="~/Content/image/elearning.png" alt="alumno">
                                </v-list-tile-avatar>

                                <v-list-tile-content>
                                    <v-list-tile-title>@ViewBag.Gnombre</v-list-tile-title>
                                    <v-list-tile-sub-title>@ViewBag.Gcorreo</v-list-tile-sub-title>
                                </v-list-tile-content>

                            </v-list-tile>
                        </v-list>
                        <v-divider></v-divider>
                        <v-list>
                            <v-list-tile>
                                <v-list-tile-action>
                                    <v-switch color="purple"></v-switch>
                                </v-list-tile-action>
                            </v-list-tile>
                            <v-list-tile>
                                <v-list-tile-title v-on:click="MenuArchivo">Menú Archivo</v-list-tile-title>
                            </v-list-tile>
                            <v-list-tile>
                                <v-list-tile-title v-on:click="MenuVideo">Menú Docente</v-list-tile-title>
                            </v-list-tile>
                            <v-list-tile>
                                <v-list-tile-title v-on:click="MenuListado">Listado Videos</v-list-tile-title>
                            </v-list-tile>
                        </v-list>
                        <v-card-actions>
                            <v-spacer></v-spacer>
                            <v-btn flat>Configuración</v-btn>
                            <v-btn color="primary" flat v-on:click="CerrarSesion">Cerrar sesión</v-btn>
                        </v-card-actions>
                    </v-card>
                </v-menu>
            </div>
        </v-toolbar>
        <div class="border-bottom pb-2 mb-3">
            <h3 class="mt-lg-2 pl-lg-3 pt-lg-5 h3">Gestión de archivos</h3>
        </div>
        <div class="container pull-up mt-5">
            <div class="form-group">
                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modalCategoria">
                    Nuevo archivo
                </button>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-9">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="tblCategoria" class="table" style="width:100%">
                                    <colgroup>
                                        <col width="10%" />
                                        <col width="40%" />
                                        <col width="30%" />
                                        <col width="20%" />
                                    </colgroup>
                                    <thead>
                                        <tr>
                                            <th>Identificador del video</th>
                                            <th>Url</th>
                                            <th>Tipo de archivo</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </v-app>
</div>

<!-- Registrar -->
<div class="modal fade" id="modalCategoria" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Registrar Categoría</h4>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <form class="needs-validation" novalidate id="frm1">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="slcTA">Tipo de archivo:</label>
                            <select class="form-control custom-select" id="slcTA" required>
                                <option value="">Seleccione</option>
                                <option value="1">archivo PDF</option>
                                <option value="2">Video en vivo (Youtube)</option>
                            </select>
                            <div class="invalid-tooltip">Seleccione</div>
                            <div class="valid-tooltip"></div>
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="slcEE">Etapa escolar:</label>
                            <select class="form-control custom-select" id="slcEE" required>
                                <option value="">Seleccione</option>
                                <option value="1">Inicial</option>
                                <option value="2">Primaria</option>
                                <option value="3">Secundaria</option>
                                <option value="4">COAR</option>
                                <option value="5">Pre-Universitario</option>
                            </select>
                            <div class="invalid-tooltip">Seleccione</div>
                            <div class="valid-tooltip"></div>
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="slcGrado">Grado:</label>
                            <select class="form-control custom-select" id="slcGrado" required>
                                <option value="">Seleccione</option>
                                <option value="1">Primero</option>
                                <option value="2">Segundo</option>
                                <option value="3">Tercero</option>
                                <option value="4">Cuarto</option>
                                <option value="5">Quinto</option>
                                <option value="6">Sexto</option>
                                <option value="1">3 años</option>
                                <option value="2">4 años</option>
                                <option value="3">5 años</option>
                                <option value="10">COAR</option>
                                <option value="11">Pre-Universitario</option>
                            </select>
                            <div class="invalid-tooltip">Seleccione</div>
                            <div class="valid-tooltip"></div>
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="slcCurso">Curso:</label>
                            <select class="form-control custom-select" id="slcCurso" required>
                                <option value="">Seleccione</option>

                            </select>
                            <div class="invalid-tooltip">Seleccione</div>
                            <div class="valid-tooltip"></div>
                        </div>

                        <div class="col-md-6 form-group">
                            <label for="slcVideo">Video:</label>
                            <select class="form-control custom-select" id="slcVideo" required>
                                <option value="">Seleccione</option>

                            </select>
                            <div class="invalid-tooltip">Seleccione</div>
                            <div class="valid-tooltip"></div>
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="txNombre">Pegar URL</label>
                            <input class="form-control" type="text" id="txNombre" placeholder="insertar el enlace" value="" required>
                            <div class="valid-tooltip"></div>
                            <div class="invalid-tooltip">Campo requerido.</div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary btn-sm" data-dismiss="modal" onclick="fn_Limpiar()">Cerrar</button>
                    <button class="btn btn-success btn-shadow btn-sm" onclick="fn_Registrar()">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Eliminar -->
<div class="modal fade" id="modalEliminarCategoria" tabindex="-1" role="dialog">
    <input type="hidden" value="" data-idcategoriaEliminar="" id="hddcategoriaEliminar" />
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <form class="needs-validation" novalidate id="frm3">
                <div class="modal-body">
                    <h5 class="h5">¿Desea eliminar el archivo?</h5>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary btn-sm" data-dismiss="modal">Cerrar</button>
                    <button class="btn btn-success btn-shadow btn-sm" onclick="fn_ConfimarEliminar()">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <link href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/src/docente/archivo.js"></script>
    <script>
        $('#frm1').submit(false);
        $('#frm2').submit(false);
        $('#frm3').submit(false);

        $('#slcEE').on('change', function () {
            //INI listar categoria 1
            $('#slcCurso').find('option').remove();
            var slcetapa = $('#slcEE option:selected').attr('value');
            var slcgrado = $('#slcGrado option:selected').attr('value');
            $.ajax({
                type: "POST",
                url: vgrutaprincipal + "docente/BuscarCurso",
                data: {
                    "GGrado": slcgrado,
                    "GEtapa": slcetapa
                },
                success: function (data) {
                    if (data.aaData === "") {
                        alert("No hay datos, intenta agregar alguno");
                    }
                    $('#slcCurso').append($("<option></option>")
                        .attr("value", "")
                        .text("seleccione una opción"));
                    $.each(data.aaData, function (index, value) {
                        $('#slcCurso').append($("<option></option>")
                            .attr("value", value.idcurso)
                            .text(value.snombre));

                    });
                },
                error: function (data) {
                    console.log(data);
                }
            });
            //FIN listar categoria
        });

        $('#slcGrado').on('change', function () {
            //INI listar categoria 1
            $('#slcCurso').find('option').remove();
            var slcetapa = $('#slcEE option:selected').attr('value');
            var slcgrado = $('#slcGrado option:selected').attr('value');
            $.ajax({
                type: "POST",
                url: vgrutaprincipal + "docente/BuscarCurso",
                data: {
                    "GGrado": slcgrado,
                    "GEtapa": slcetapa
                },
                success: function (data) {
                    if (data.aaData === "") {
                        alert("No hay datos, intenta agregar alguno");
                    }
                    $('#slcCurso').append($("<option></option>")
                        .attr("value", "")
                        .text("seleccione una opción"));
                    $.each(data.aaData, function (index, value) {
                        $('#slcCurso').append($("<option></option>")
                            .attr("value", value.idcurso)
                            .text(value.snombre));

                    });
                },
                error: function (data) {
                    console.log(data);
                }
            });
            //FIN listar categoria
        });

        $('#slcCurso').on('change', function () {
            $('#slcVideo').find('option').remove();
            var slcvideo = $('#slcCurso option:selected').attr('value');
            $.ajax({
                type: "POST",
                url: vgrutaprincipal + "docente/BuscarVideo",
                data: {
                    "widcursol": slcvideo,
                },
                success: function (data) {
                    console.log(data.aaData);
                    if (data.aaData === "") {
                        alert("No hay datos, intenta agregar alguno");
                    }
                    $('#slcVideo').append($("<option></option>")
                        .attr("value", "")
                        .text("seleccione una opción"));
                    $.each(data.aaData, function (index, value) {
                        $('#slcVideo').append($("<option></option>")
                            .attr("value", value.idvideo)
                            .text(value.snombre));
                    });
                },
                error: function (data) {
                    console.log(data);
                }
            });
        });

        $(document).ready(function () {

            function fn_util_obtieneNroPagina(iDisplayStart, iDisplayLength) {
                var start = (iDisplayStart === 0 ? 1 : iDisplayStart);
                return (start / iDisplayLength) + 1;
            }

            function fn_util_AjaxWM_Obj(pstrMetodo, pParam, successFn, errorFn) {
                var oParametros = JSON.stringify(pParam);

                //Arma Parametros
                var parametro = '';
                if (oParametros === '') {
                    parametro = "{}";
                } else {
                    parametro = oParametros;
                }
                //Ejecuta Ajax
                $.ajax({
                    type: "POST",
                    url: pstrMetodo,
                    contentType: "application/json; charset=utf-8",
                    data: parametro,
                    dataType: "json",
                    async: true,
                    success: function (data) {
                        successFn(data);
                    },
                    error: errorFn
                });

            }

            $('#tblCategoria').dataTable({
                "responsive": {
                    "details": true,
                    "columnDefs": [
                        { "responsivePriority": 1 },
                        { "responsivePriority": 2 }
                    ]
                },
                "bServerSide": true,
                "sAjaxSource": vgrutaprincipal + 'docente/ListarArchivo',
                "bProcessing": true,
                "sPaginationType": "full_numbers",
                "bFilter": false,
                "bSort": false,
                "language": {
                    "info": "",
                    "infoEmpty": "",
                    "infoFiltered": "",
                    "emptyTable": "No se encontraron registros",
                    "sZeroRecords": "No se encontraron registros.",
                    "processing": "Cargando. Por favor espere...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "sSearch": "Buscar:"
                },
                "bLengthChange": false,
                "fnDrawCallback": function (oSettings) {
                    //si esta cargando la data
                },
                "aoColumns": [
                    { "sName": "archivoid", "mDataProp": "archivoid" },
                    { "sName": "surl", "mDataProp": "surl" },
                    {
                        "mData": "tipodearchivo",
                        "sClass": "center",
                        "mRender": function (data, type, value) {
                            if (value.tipodearchivo === 1) {
                                return "<p style='font-size:16px;'>Archivo PDF</i>";
                            } else {
                                return "<p style='font-size:16px;'>Video en vivo</i>";
                            }

                        }
                    },
                    {}
                ],
                "fnServerData": function (sSource, aoData, fnCallback, oSettings) {
                    var sEcho = aoData[0].value;

                    var sParams = {
                        "widvideo": 0,
                        "wtipoarchivo": 0
                    };

                    oSettings.jqXHR = fn_util_AjaxWM_Obj(
                        sSource,
                        sParams,
                        function (result) {
                            fnCallback(result);
                        }, function (error) {
                            // mostrar si hay un error
                            console.log(error);
                        });
                }, "aoColumnDefs":
                    [
                        {
                            "mRender": function (data, type, row) {
                                var strHtml = "<button class='btn btn-info' onclick='fn_Eliminar()' data-cat=\"" + row.archivoid + "\" id='AcessEliminar' >Eliminar</button>";
                                return strHtml;
                            },
                            "sWidth": "5px",
                            "sClass": "css-center",
                            "bSort": false,
                            "aTargets": [3]
                        }
                    ]
            });

        });

        function fn_Registrar() {
            var sUrl = $('#txNombre').val();
            var slcvideo = $('#slcVideo option:selected').attr('value');
            var slctipoarchivo = $('#slcTA option:selected').attr('value');

            if (slcvideo === "") {
                alert("selecciona un video");
            }

            $.ajax({
                type: "POST",
                url: vgrutaprincipal + "docente/registrarArchivo",
                data: {
                    "wvideoid": slcvideo,
                    "wurl": sUrl,
                    "wtipoarchivo": slctipoarchivo
                },
                success: function (data) {
                    var table = $('#tblCategoria').DataTable();
                    table.clear().draw();
                    $('#modalCategoria').modal('hide');
                    $('#txNombre').val("");
                    $('#slcVideo option:eq(0)').prop('selected', true);
                    $('#slcVideo').removeAttr('required');
                },
                error: function (data) {
                    console.log(data);
                }
            });
        }

        function fn_Limpiar() {
            $('#txNombre').val("");
        }

        function fn_Eliminar() {
            $('body').on("click", "#AcessEliminar", function () {
                var id_categoria = $(this).attr("data-cat");
                var ArrayCategoria = id_categoria.split("|");

                $('#hddcategoriaEliminar').attr("data-idcategoriaEliminar", ArrayCategoria[0]);
                $('#modalEliminarCategoria').modal("show");
            });
        }

        function fn_ConfimarEliminar() {
            var idcategoria = $('#hddcategoriaEliminar').attr("data-idcategoriaEliminar");
            $.ajax({
                type: "POST",
                url: vgrutaprincipal + "docente/EliminarArchivo",
                data: {
                    "wvideoid": idcategoria
                },
                success: function (data) {
                    $('#modalEliminarCategoria').modal("hide");
                    var table = $('#tblCategoria').DataTable();
                    table.clear().draw();
                },
                error: function (data) {
                    console.log(data);
                }
            });
        }

    </script>
}
